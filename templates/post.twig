<div class="container">
    <div class="row">
        <div class="col col-10">
            <article class="blog-post">
                <div class="blog-post-title">{{ post.title }}</div>
                <div class="blog-post-date">{{ post.date }}</div>
                {% if post.tags %}
                    <div class="blog-post-tags">
                        {% for tag in post.tags %}
                            <a href="{{ url }}/tag/{{ tag }}" class="blog-post-tag">{{ tag }}</a>
                        {% endfor %}
                    </div>
                {% endif %}
                {% if post.image %}
                    <div class="blog-post-image"><img src="{{ post.image }}" alt="{{ post.title }}"></div>
                {% endif %}
                <div class="blog-post-content">{% apply markdown_to_html %}{{ post.content }}{% endapply %}</div>
            </article>
        </div>
        <div class="col col-2">
            {% include 'recent.twig' %}
            {% include 'tags.twig' %}
        </div>
    </div>
</div>